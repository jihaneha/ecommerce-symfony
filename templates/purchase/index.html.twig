{% extends "base.html.twig" %}

{% block title %}Mes commandes
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Mes commandes</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Numéro</th>
					<th>Adresse</th>
					<th>Date de commande</th>
					<th>Total de commande</th>
				</tr>
			</thead>
			<tbody>
				{% for p in purchases %}
					<tr>
						<td>{{ p.id }}</td>
						<td>{{ p.adress }}<br>{{ p.postalcode }}
							,{{ p.city }}</td>
						<td>{{ p.purchasedAt | date('d/m/y H:i') }}</td>
						<td>{{ p.total / 100 }}
							€</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
