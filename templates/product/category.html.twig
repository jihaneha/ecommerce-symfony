{% extends 'base.html.twig' %}
{% block title %}Categorie :
	{{slug}}
{% endblock %}
{% block body %}
	<div class="container">
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="{{ path('homepage') }}">Acceuil</a>
			</li>
			<li class="breadcrumb-item active" aria-current="page">{{category.name}}</li>
		</ol>

		<h1 class="mb-5">Categorie :{{category.name}}</h1>
		<div class="row">
			{% for p in category.products %}
				<div class="col-4">
					<div class="card">
						<img src="/images/{{p.mainpicture}}" alt="image du produit {{ p.name }}" class="img-fluid">
						<div class="card-body">
							<h4 class="card-little">{{ p.name }}
								({{ p.price / 100}}
								EUR )</h4>
							<span class="badge badge-info text-bg-dark mb-2 mt-2">{{ p.category.name }}</span>
							<p class="card-text">{{ p.shortDescription }}</p>
							<a href="{{ path('product_show',{'category_slug':p.category.slug,'slug':p.slug}) }}" class="btn btn-secondary btn-sm">DÃ©tails</a>
							<a href="#" class="btn btn-dark btn-sm">Ajouter</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
